<style>
    #details-{{uuid}}.problem-statement {
        border: 1px solid rgba(0,0,0,.125);
        padding: .5em .5em 0;
        margin-bottom: 15px;
        background-color: rgba(0,0,0,.03);
    }

    .problem-statement summary {
        font-weight: bold;
        margin: -.5em -.5em 0;
        padding: .5em;
        outline: none;
    }

    #details-{{uuid}}.problem-statement[open] {
        padding: .5em;
    }

    #details-{{uuid}}.problem-statement[open] summary {
        border-bottom: 1px solid rgba(0,0,0,.125);
        margin-bottom: .5em;
    }

</style>
<details id="details-{{uuid}}" class="problem-statement rounded" {{#is-open}}open{{/is-open}}>
    <summary> Problem Statement </summary>
    {{{problem-statement}}}
</details>
