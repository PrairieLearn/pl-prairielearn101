<div class="container-fluid">
  <div class="matcrab-example">
    {{#setup-variables}}<div class="matcrab-setup">
        {{setup-variables}}
      </div>{{/setup-variables}}
    {{^setup-variables}}<p></p>{{/setup-variables}}
    <table><tbody>
      <tr>
        <td rowspan="2" style="text-align: center">
          <img src="{{course-files-path}}/img/crabster.jpg" style="height: 35px" />
          <br />
          <a role="button" class="btn btn-success matcrab-run">Run</a>
          <br />
          <a role="button" class="btn btn-warning matcrab-reset">Reset</a>
        </td>
        <td rowspan="2">
          <div class="matcrab-workspace list-group matlab-vars" style="resize: auto"></div>
        </td>
        <td>
          <textarea class="form-control matcrab-entry" style="resize: auto">
            {{#text-area}}{{text-area}}{{/text-area}}
            {{^text-area}}{{/text-area}}
          </textarea>
        </td>
      </tr>
      <tr>
        <td>
          <div class="matcrab-vis">
          </div>
        </td>
      </tr>
    </tbody></table>
  </div>
</div>


