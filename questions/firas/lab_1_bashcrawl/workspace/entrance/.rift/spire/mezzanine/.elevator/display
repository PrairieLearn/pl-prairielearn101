#!/bin/bash
#
# If you are reading this, you have wandered out of bounds
# and are reading the code that drives the game.
#
#                    Congratulations!
#
# Learning Linux is all about curiosity, so read this code and see
# if you can figure out what it does.
#
# When you're ready to continue playing the game, though, stick to
# the scrolls. If you're stuck, go to Gitlab and create an issue.
# We're happy to provide hints.
# 

floors=666
countdown () {
	var=${floors}
	len=${#var} 
	echo -n $var
    let m=var-1
	for t in `seq ${m} -1 1`
	do
		sleep 0.1
		for i in `seq ${len} -1 1`
		do
			echo -ne '\b'
		done
		if [ $len -gt ${#t} ]
		then
            let l=len-1
			for n in `seq ${l} -1 ${#t}`
			do
				echo -n '0'
			done
		fi
		echo -n $t
	done
}


countup () {
	var=${floors}
	for t in `seq 1 ${var}`
	do
		sleep 0.1
        len=${#t}
		for i in `seq 1 ${#var}`
		do
			echo -ne '\b'
		done
        if [ ${len} -lt ${#var} ]; then
            let n=${#var}-len
            for j in `seq 1 ${n}`
            do
                echo -ne '0'
            done
        fi
        echo -n $t
	done
}

if grep --quiet UP .direction; then
    cat << EOF
You hear a slight whirring, and feel a heaviness at your
feet, with a vague, disquieting sense of motion.  

A magickal display reads:  

EOF
    countup
    cat << EOF

The doors slide open, with nothing but darkness beyond.

EOF
    echo "DOWN" > .direction
    ln -sf .satellite door && \
        sleep 10 && \
        echo "The doors slide closed." && \
        rm door &> /dev/null && \
    echo "DOWN" > .direction &
    echo
else
    cat << EOF
You hear a slight whirring, and feel a lightness at your
feet, with a vague, disquieting sense of motion. 

A magickal display reads:  

EOF
    countdown
    echo
    echo
    echo "UP" > .direction &
    cat << EOF
The doors slide open, with nothing but darkness beyond.

EOF
    sleep 10 && \
        ln -sf .. door && \
        echo "The doors slide closed." && \
        rm door &> /dev/null &
    echo
fi
